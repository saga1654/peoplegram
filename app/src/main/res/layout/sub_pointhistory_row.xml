<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:weightSum="1">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.90">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/point_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="포인트 충전"
                    android:textSize="14dp"
                    android:textColor="#1d1d26" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/now_point"
                    android:textColor="#ccc"
                    android:textSize="11dp"
                    android:text="현재포인트 : 10000p" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/point_type"
                    android:src="@drawable/point_icon_in"/>

                <TextView
                    android:id="@+id/point_datetime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2015-10-09"
                    android:paddingLeft="10dp"
                    android:textSize="11dp"

                    android:textColor="#ccc" />

            </LinearLayout>







        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="0.10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coin"/>

            <TextView
                android:id="@+id/point_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="+ 100g"
                android:textColor="#1d1d26" />

        </LinearLayout>




    </LinearLayout>

</LinearLayout>