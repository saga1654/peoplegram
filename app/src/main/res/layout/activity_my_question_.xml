<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#30344d"
    tools:context="kr.co.people_grame.apppeoplegram.MyQuestion_Activity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

       <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:background="#67676d"
        android:weightSum="1">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:textAppearance="?android:attr/textAppearanceMedium"
               android:text="회원가입"
               android:layout_gravity="center_horizontal"
               android:gravity="center"
               android:textColor="#ffffff" />
       </LinearLayout>


        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.40"
        android:weightSum="1">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:text="나는 누구일까요?"
                    android:gravity="center"></TextView>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:gravity="center_vertical|center_horizontal">

                <kr.co.people_grame.app.PagerContainer
                    android:id="@+id/pager_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v4.view.ViewPager
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal" />
                </kr.co.people_grame.app.PagerContainer>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:background="#fff"
            android:weightSum="1">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:gravity="center_vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/step1"
                    android:id="@+id/textView2"
                    android:layout_gravity="center_horizontal"
                    android:textSize="16dp" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:gravity="center_vertical">

                <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txvSeekBarValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나는"
                        android:background="@drawable/myquestion_tooltip"
                        android:textSize="10dp"
                        android:textColor="#1d1d26"
                        android:gravity="center">
                    </TextView>
                </RelativeLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:gravity="center_vertical">

                    <SeekBar
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sb_my_question_activity_data"
                        android:layout_gravity="center_horizontal"
                        android:max="100"
                        android:thumb="@drawable/myquestion_seek_btn_off"
                        android:progressDrawable="@drawable/seekcustom_bg"
                        android:progress="50" />

                </LinearLayout>




            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:gravity="center">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton"
                    android:background="@android:color/transparent"
                    android:onClick="btn_prev"
                    android:src="@drawable/myquestion_prev_btn" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton2"
                    android:background="@android:color/transparent"
                    android:layout_marginLeft="10dp"
                    android:onClick="btn_next"
                    android:src="@drawable/myquestion_next_btn" />
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
